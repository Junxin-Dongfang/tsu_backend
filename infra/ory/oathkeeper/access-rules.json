[
  {
    "id": "tsu-health-check",
    "match": {
      "url": "http://<.*>/health",
      "methods": ["GET"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    }
  },
  {
    "id": "tsu-swagger-ui",
    "match": {
      "url": "http://<.*>/swagger/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    }
  },
  {
    "id": "tsu-cors-preflight-rule",
    "match": {
      "url": "http://<.*>/api/v1/<.*>",
      "methods": ["OPTIONS"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    }
  },
  {
    "id": "tsu-auth-public-apis",
    "match": {
      "url": "http://<.*>/api/v1/auth/<(register|login|logout|recovery/initiate|recovery/verify|password/reset)>",
      "methods": ["POST"]
    },
    "authenticators": [{ "handler": "noop" }],
    "authorizer": { "handler": "allow" },
    "mutators": [{ "handler": "noop" }],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    }
  },
  {
    "id": "tsu-auth-get-user",
    "match": {
      "url": "http://<.*>/api/v1/auth/users/<.*>",
      "methods": ["GET"]
    },
    "authenticators": [
      {
        "handler": "bearer_token",
        "config": {
          "token_from": {
            "header": "Authorization"
          }
        }
      },
      {
        "handler": "bearer_token",
        "config": {
          "token_from": {
            "cookie": "ory_kratos_session"
          },
          "forward_http_headers": ["Authorization"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User-ID": "{{ print .Subject }}",
            "X-Session-Token": "{{ print .Extra.ory_kratos_session }}"
          }
        }
      }
    ],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    },
    "errors": [
      {
        "handler": "json"
      }
    ]
  },
  {
    "id": "tsu-admin-protected-apis",
    "match": {
      "url": "http://<.*>/api/v1/admin/<.*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "bearer_token",
        "config": {
          "token_from": {
            "header": "Authorization"
          }
        }
      },
      {
        "handler": "bearer_token",
        "config": {
          "token_from": {
            "cookie": "ory_kratos_session"
          },
          "forward_http_headers": ["Authorization"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User-ID": "{{ print .Subject }}",
            "X-Session-Token": "{{ print .Extra.ory_kratos_session }}"
          }
        }
      }
    ],
    "upstream": {
      "url": "http://tsu_admin:8071",
      "strip_path": ""
    },
    "errors": [
      {
        "handler": "json"
      }
    ]
  }
]